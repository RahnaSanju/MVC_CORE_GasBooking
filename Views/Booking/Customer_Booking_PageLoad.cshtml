@model MVC_CORE_Project.Models.BookingCls

<form asp-action="Customer_Booking_Insert_Click" class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label">Cylinder Type: </label>
        @Html.DropDownList("ddlBookingCylType", (SelectList)ViewBag.selCylType, "--Select--", new { @class = "form-control", @id = "cylType-ddl" })
    </div>
    <div class="form-group">
        <input type="submit" value="Insert" class="btn btn-success" />
    </div>
    <div>
        @Html.ActionLink("Go back to Home Page", "CustomerHome", "Login")
    </div>

</form>

@{
    try
    {
        if (TempData["msg"] != null)
        {
            <script>
                alert('@TempData["msg"]');
            </script>
        }
    }
    catch(Exception e)
    {
        <script>
            alert('@e');
        </script>
    }
    
}
