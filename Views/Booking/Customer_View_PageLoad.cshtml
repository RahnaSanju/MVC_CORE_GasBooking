@model IEnumerable<MVC_CORE_Project.Models.BookingCls>

<div>
    @using (Html.BeginForm("SearchCustomer_Click", "Booking", FormMethod.Post))
    {
        <form class="form-horizontal">
            <fieldset>
                <legend>Search</legend>
                <div class="form-group">
                    <label>Booking Mode</label><br />
                    @Html.DropDownList("ddlBookingMode", (SelectList)ViewBag.selBookMode, "--Select--", new { @class = "form-control", @id = "bookMode-ddl" })
                </div>
                <div class="form-group">
                    <label>Booking Status</label><br />
                    @Html.DropDownList("ddlBookingStatus", (SelectList)ViewBag.selBookStatus, "--Select--", new { @class = "form-control", @id = "bookStatus-ddl" })
                </div>
                <div class="form-group">
                    <label class="control-label">Cylinder Type: </label>
                    @Html.DropDownList("ddlCylinderType", (SelectList)ViewBag.selCylType, "--Select--", new { @class = "form-control", @id = "cylType-ddl" })
                </div>
                <div class="form-group">
                    <label class="control-label">Booking Date:</label><br />
                    <label class="control-label">From Date</label>
                    <input type="date" name="fromDate" id="fromDate" />
                    <label class="control-label">To Date</label>
                    <input type="date" name="endDate" id="endDate" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Search" class="btn-success"/><br />
                </div>

            </fieldset>
        </form>
    }
    <br />
</div>


<table class="table">
    <thead>
        <tr>
            <td>Consumer No.</td>
            <td>Cutomer Name</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Email</td>
            <td>Photo</td>
            <td>Booking Mode</td>
            <td>Booking Status</td>
            <td>Cylinder Type</td>
            <td>Booking Date</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <td>@data.ConsumerNo</td>
                <td>@data.custName</td>
                <td>@data.custAddr</td>
                <td>@data.custPhone</td>
                <td>@data.custEmail</td>
                <td><img src="@Url.Content(@data.custPhoto)" alt="Image" height="150" width="150" /></td>
                <td>@data.BookingMode</td>
                <td>@data.BookingStatus</td>
                <td>@data.CylinderType</td>
                <td>@data.BookingDate</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Go back to Home Page", "AdminHome", "Login")
</div>