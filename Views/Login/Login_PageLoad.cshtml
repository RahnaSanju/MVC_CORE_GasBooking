@model MVC_CORE_Project.Models.LoginCls

<form asp-action="Login_Click" class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label">Username : </label>
        <input asp-for="lUsrnm" class="form-control" id="t1" required />
    </div>
    <div class="form-group">
        <label class="control-label">Password : </label>
        <input asp-for="lPwd" class="form-control" type="password" id="t2" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-success" />
    </div>
    <div>
        @Html.ActionLink("New user? Sign up", "Cust_Insert_Load", "Customer")
    </div>
</form>

@{
    if (TempData["msg"] != null)
    {
        if (TempData["msg"].ToString() == "Invalid username and password")
        {
            <script>
                alert('@TempData["msg"]');
            </script>
        }
        else
        {
            <script>
                alert('@TempData["msg"]');
                document.getElementById(t1).value = "";
                document.getElementById(t2).value = "";
            </script>
        }

    }
}